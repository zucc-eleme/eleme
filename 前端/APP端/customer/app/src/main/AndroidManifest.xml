        <activity android:name=".control.identify.CustomInfoActivity" />
        <activity android:name=".control.CustomerMainActivity" />
        <activity android:name=".control.CustomerCreateActivity" />
        <activity android:name=".control.ForgetPwdActivity" />
        <activity android:name=".control.LoginCustomerActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>