<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".control.ForgetPwdActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/pwd_forget_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        app:navigationIcon="@android:drawable/ic_menu_close_clear_cancel"

        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:titleTextColor="#ffffff"
        />

    <EditText
        android:id="@+id/pwd_for_back"
        android:layout_width="420dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="请输入手机号"
        android:textSize="20sp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/phone_for_back"
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:text=""
            android:textColor="#E12525"
            android:gravity="center"
            android:textSize="25sp" />

        <Button
            android:id="@+id/back_pwd"
            android:layout_width="120dp"
            android:layout_height="53dp"
            android:background="#2196F3"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:text="@string/pwd_inflect"
            android:textColor="#ffffff"
            android:textSize="24dp"
            android:clickable="true"/>
    </LinearLayout>


</LinearLayout>