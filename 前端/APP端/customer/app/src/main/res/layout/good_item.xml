<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shop_item"
    android:layout_marginTop="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:padding="10dp"
    >
    <ImageView
        android:id="@+id/list_food_picture"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/banner"
        android:scaleType="fitXY"/>
    <LinearLayout
        android:id="@+id/list_food1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/list_food_picture"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/list_food_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="玫瑰花蛋糕"
            android:textSize="18sp"
            android:textColor="@android:color/black"/>
        <TextView
            android:id="@+id/list_food_class"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="甜品"
            android:textSize="12sp"
            android:textColor="@android:color/black"/>
        <TextView
            android:id="@+id/list_month_salenum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="300"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray"/>
        <TextView
            android:id="@+id/list_food_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="30¥"
            android:textSize="18sp"
            android:textColor="@color/price_red"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/list_food2"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/list_food1">

        <TextView
            android:id="@+id/list_food_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="8dp"
            android:text="介绍"
            android:textColor="@android:color/holo_blue_light"
            android:textSize="14sp" />
        <Button
            android:id="@+id/list_add_food"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:background="@drawable/add_car"
            android:text="加入购物"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            />

    </LinearLayout>

</RelativeLayout>