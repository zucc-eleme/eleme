<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/form_style"
    android:orientation="horizontal">
    <LinearLayout
        android:id="@+id/the_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="4dp">
        <TextView
            android:id="@+id/item_order_shop_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="订单号："
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"/>

        <ImageView
            android:layout_marginTop="5dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/icon_cart"/>
    </LinearLayout>
    <LinearLayout
        android:layout_toRightOf="@id/the_left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/item_order_shop_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="right"
            android:textStyle="italic"
            android:textSize="30sp"
            android:textColor="@android:color/holo_red_light"
            android:text="总价"/>
        <TextView
            android:id="@+id/item_order_shop_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="商家名"/>
        <TextView
            android:id="@+id/item_order_time"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="下单时间："/>
    </LinearLayout>
    <TextView
        android:id="@+id/item_order_detail_return"
        android:layout_width="120dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="80sp"
        android:gravity="center"
        android:text="未接单"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:background="@drawable/button_style"/>
</RelativeLayout>