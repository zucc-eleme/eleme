.user_info_wrap {
  position: relative;
}
.user_info_wrap .user_img_wrap {
  width: 100vw;
  height: 35vh;
  overflow: hidden;
  background-color: var(--themeColor);
}
.user_info_wrap .user_img_wrap .user_bg {
  width: 100%;
  height: 52vh;
  filter: blur(12rpx);
}
.user_info_wrap .user_img_wrap .user_info {
  position: absolute;
  left: 50%;
  top: 15%;
  transform: translateX(-50%);
}
.user_info_wrap .user_img_wrap .user_info .user_inco {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  text-align: center;
}
.user_info_wrap .user_img_wrap .user_info .user_name {
  margin-top: 40rpx;
  color: white;
  font-weight: 40rpx;
}
.user_info_wrap .user_img_wrap button {
  margin-top: 220rpx;
}
.user_info_wrap .user_conente {
  background-color: #F6F6F6;
}
.user_info_wrap .user_conente .collection {
  display: flex;
  justify-content: space-around;
  align-items: center;
  height: 90rpx;
  background-color: #ffffff;
  border-radius: 10rpx;
}
.user_info_wrap .user_conente .collection .item {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.user_info_wrap .user_conente .collection .item .num {
  color: var(--themeColor);
  font-weight: bold;
}
.user_info_wrap .user_order {
  background-color: #ffffff;
  margin-top: 30rpx;
  border-radius: 10rpx;
}
.user_info_wrap .user_order .my {
  display: flex;
  align-items: center;
  height: 80rpx;
  padding-left: 20rpx;
}
.user_info_wrap .user_order .order {
  display: flex;
  align-items: center;
  justify-content: space-around;
  height: 100rpx;
  border-top: 1px solid #FBFBFB;
}
.user_info_wrap .user_order .order .item {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}
.user_info_wrap .user_order .order .item .iconfont {
  color: var(--themeColor);
}
.user_info_wrap .goods_address {
  display: flex;
  align-items: center;
  height: 80rpx;
  margin: 30rpx 0;
  background-color: #ffffff;
  padding-left: 20rpx;
}
.user_info_wrap .customer {
  width: 100vw;
  padding: 0;
  font-weight: normal;
}
.user_info_wrap .item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 80rpx;
  padding: 0 20rpx;
  background-color: #ffffff;
  border-bottom: 1px solid #FBFBFB;
  font-size: 24rpx;
}
.user_info_wrap .btn {
  width: 100vw;
  padding-left: 20rpx;
  font-weight: normal;
  margin: 0;
  background: #ffffff;
}
.user_info_wrap .share {
  display: flex;
  align-items: center;
  margin-top: 30rpx;
  height: 90rpx;
  padding-left: 20rpx;
  background-color: #ffffff;
}
