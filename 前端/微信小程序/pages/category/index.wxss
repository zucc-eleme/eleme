page {
  width: 100vw;
  height: 100vh;
}
.category {
  width: 100%;
  height: 100%;
}
.category .cates {
  display: flex;
  height: calc(100vh - 90rpx);
}
.category .cates .left_menu_list {
  flex: 3;
  background-color: #F6F6F6;
  color: #9D9D9D;
}
.category .cates .left_menu_list .menu_item {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 80rpx;
}
.category .cates .left_menu_list .active {
  border-left: 5rpx solid #EF250F;
  font-weight: bold;
  font-size: 32rpx;
  color: #000000;
}
.category .cates .right_content {
  flex: 8;
  padding-left: 30rpx;
  background-color: #ffffff;
}
.category .cates .right_content .goods_group {
  border-left: 2rpx solid #f9f9f9;
  border-top: 5rpx solid #f9f9f9;
  padding-bottom: 20rpx;
}
.category .cates .right_content .goods_group .goods_title {
  display: flex;
  align-items: center;
  height: 80rpx;
  color: #2F2F2F;
  font-weight: bold;
}
.category .cates .right_content .goods_group .goods_list {
  display: flex;
  flex-wrap: wrap;
}
.category .cates .right_content .goods_group .goods_list navigator {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 33.33%;
}
.category .cates .right_content .goods_group .goods_list navigator image {
  width: 60%;
}
.category .cates .right_content .goods_group .goods_list navigator .goods_name {
  display: flex;
  align-items: center;
  height: 80rpx;
  font-size: 24rpx;
}
